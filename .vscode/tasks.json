{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run COBOL",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cobc -x \"${file}\" && ./\"${fileBasenameNoExtension}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
